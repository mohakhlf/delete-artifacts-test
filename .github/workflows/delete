name: Lint, test & build
on:
  workflow_dispatch:
    environment:
        description: 'Environment to run tests against'
        type: environment
        required: true 
        default: 'test'

  delete-artifacts:
    runs-on: ubuntu-latest
    steps:
      - name: GitHub Script
        uses: actions/github-script@v6.1.0
        with:
          script: node scripts/delete-artifacts.js